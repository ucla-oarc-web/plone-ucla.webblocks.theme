<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
    xmlns:xi="http://www.w3.org/2001/XInclude"

    css:if-content="body.portaltype-ucla-content-marketinglanding"
>
    
    <append css:theme="#page-content">
        
        <div id="content-marketinglanding">

            <div class="row container always-has-margin">
                <xsl:if css:test="#-pt-collectiontile1">
                    <div class="panel-4">
                        <xsl:copy-of css:select="#-pt-collectiontile1" />
                    </div>
                </xsl:if>
                <xsl:if css:test="#-pt-collectiontile2">
                    <div class="panel-4">
                        <xsl:copy-of css:select="#-pt-collectiontile2" />
                    </div>
                </xsl:if>
                <xsl:if css:test="#billboard_richtext">
                    <div class="panel-4">
                        <xsl:copy-of css:select="#billboard_richtext" />
                    </div>
                </xsl:if>
            </div>
        
        </div>
        
    </append>
    
</rules>