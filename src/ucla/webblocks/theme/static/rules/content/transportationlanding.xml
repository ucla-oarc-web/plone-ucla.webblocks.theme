<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
    xmlns:xi="http://www.w3.org/2001/XInclude"

    css:if-content="body.portaltype-ucla-content-transportationlanding"
>
    
    <!--
    
    See marketinglanding.xml for details
    
    The fact this is almost a complete duplicate suggests we need a refactor.
    
    -->
    
    <append css:theme="#page-content">
        
        <div id="content-transportationlanding">
        
            <div class="clearfix">
                <xsl:copy-of css:select=".billboardtile"/>
            </div>

            <div class="clearfix container always-has-margin">
                <xsl:copy-of css:select=".documentFirstHeading"/>
                <div class="row">
                    <xsl:for-each css:select=".button_tile_images">
                        <div class="panel-2">
                            <xsl:copy-of css:select=".button_tile_images" />
                        </div>
                    </xsl:for-each>
                </div>
            </div>

            <div class="row container always-has-margin">
                <xsl:if css:test="#-pt-collectiontile1">
                    <div class="panel-8">
                        <xsl:copy-of css:select="#-pt-collectiontile1" />
                    </div>
                </xsl:if>
                <xsl:if css:test="#-pt-collectiontile2">
                    <div class="panel-4">
                        <xsl:copy-of css:select="#-pt-collectiontile2" />
                    </div>
                </xsl:if>
            </div>
        
        </div>
        
    </append>
    
</rules>