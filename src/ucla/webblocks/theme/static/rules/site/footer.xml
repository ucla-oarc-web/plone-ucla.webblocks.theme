<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
    xmlns:xi="http://www.w3.org/2001/XInclude">
    
    <!-- site footer -->
	<replace css:theme-children="#site-footer-content" css:content="#portal-footer" />
    
    <!-- site actions -->
	<drop css:theme="#site-footer-actions" css:if-not-content="#portal-siteactions" />
	<replace css:theme-children="#site-footer-actions" css:content="#portal-siteactions" />
    
    <!-- site colophon -->
	<drop css:theme="#site-footer-colophon" css:if-not-content="#portal-colophon" />
	<replace css:theme-children="#site-footer-colophon" css:content="#portal-colophon" />
    
</rules>