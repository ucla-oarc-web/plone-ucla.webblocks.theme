<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
    xmlns:xi="http://www.w3.org/2001/XInclude">
    
    <!-- site title -->
	<replace css:theme-children="#site-header-title-primary" css:content="#portal-logo" />
    
    <!-- site subtitle -->
	<replace css:theme-children="#site-header-title-secondary" css:content="#departmenttitle" />
    
    <!-- site search box -->
    <drop css:cotent="#portal-searchbox .searchSection"/>
	<replace css:theme-children="#site-header-search" css:content="#portal-searchbox" />
    
    <!-- megamenu -->
	<replace css:theme-children="#site-header-navigation">
        <ul id="portal-globalnav">
            <xsl:for-each css:select="ul#portal-globalnav > li">
                <li>
                    <h1>
                        <xsl:copy-of select="a"/>
                    </h1>
                    <div class="dropdown">
                        <xsl:choose>
                            <xsl:when test="ul/li[3]">
                                <div class="row medium-collapse">
                                    <div class="panel-6">
                                        <div class="row small-collapse">
                                            <div class="panel-6">
                                                <xsl:copy-of select="ul/li[1]/*"/>
                                            </div>
                                            <div class="panel-6">
                                                <xsl:copy-of select="ul/li[2]/*"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="panel-6">
                                        <div class="row small-collapse">
                                            <div class="panel-6">
                                                <xsl:copy-of select="ul/li[3]/*"/>
                                            </div>
                                            <div class="panel-6">
                                                <xsl:copy-of select="ul/li[4]/*"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </xsl:when>
                            <xsl:otherwise>
                                <xsl:choose>
                                    <xsl:when test="ul/li[2]">
                                        <div class="row small-collapse">
                                            <div class="panel-6">
                                                <xsl:copy-of select="ul/li[1]/*"/>
                                            </div>
                                            <div class="panel-6">
                                                <xsl:copy-of select="ul/li[2]/*"/>
                                            </div>
                                        </div>
                                    </xsl:when>
                                    <xsl:otherwise>
                                        <div>
                                            <xsl:copy-of select="ul/li[1]/*"/>
                                        </div>
                                    </xsl:otherwise>
                                </xsl:choose>
                            </xsl:otherwise>
                        </xsl:choose>
                    </div>
                </li>
            </xsl:for-each>
        </ul>
    </replace>
    
</rules>